<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - auebaGaleria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/auebaGaleria.styles.css" asp-append-version="true" />
    <style>
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #f8f9fa;
            padding-top: 20px;
            border-right: 1px solid #ddd;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .sidebar img.logo {
            max-width: 150px;
            height: auto;
            margin-bottom: 20px;
        }

        .sidebar a.nav-link {
            color: #333;
            padding: 10px 20px;
            display: block;
            width: 100%;
            text-align: center;
            transition: background-color 0.2s;
        }

        .sidebar a.nav-link:hover {
            background-color: #e9ecef;
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <!-- Menu lateral -->
    <div class="sidebar">
        <img src="~/img/Logo.png" alt="Logo da auebaGaleria" class="logo" />
        <h2 class="text-center">auebaGaleria</h2>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
            </li>

            <!-- Links para Categorias e Produtos -->
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Categorias" asp-action="Index">Criar Categoria</a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Produtos" asp-action="Index">Criar Produto</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>
        </ul>
    </div>

    <!-- Conteúdo principal -->
    <div class="main-content">
        <header class="mb-3">
            <!-- Barra superior opcional -->
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted mt-4">
            <div class="container">
                &copy; 2024 - auebaGaleria - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
